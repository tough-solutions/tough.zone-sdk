{
    "name": "@tough-solutions/tough.zone-sdk",
    "version": "0.0.0-development",
    "description": "SDK for tough.zone integration",
    "repository": {
        "type": "git",
        "url": "https://github.com/tough-solutions/tough.zone-sdk.git"
    },
    "author": "LOUD GmbH",
    "homepage": "https://github.com/tough.solutions/tough.zone-sdk#readme",
    "bugs": {
        "url": "https://github.com/tough.solutions/tough.zone-sdk/issues"
    },
    "license": "MIT",
    "engines": {
        "node": ">=16 <19",
        "npm": ">=7 <10"
    },
    "main": "lib/index.js",
    "scripts": {
        "lint": "prettier --check . && eslint .",
        "test": "jest",
        "test:e2e": "jest --config test/e2e/jest.e2e-config.ts",
        "prebuild": "rimraf lib",
        "build": "tsc",
        "prettier": "prettier --write .",
        "semantic-release": "semantic-release",
        "prepare": "is-ci || husky install"
    },
    "dependencies": {
        "@apollo/client": "~3.7.0",
        "cross-fetch": "~4.0.0",
        "graphql": "~16.7.0",
        "joi": "~17.9.2"
    },
    "devDependencies": {
        "@faker-js/faker": "~8.0.0",
        "@jest/types": "~29.6.0",
        "@types/jest": "~29.5.0",
        "@typescript-eslint/eslint-plugin": "~6.5.0",
        "@typescript-eslint/parser": "~6.5.0",
        "commitizen": "~4.3.0",
        "cz-conventional-changelog": "~3.3.0",
        "dotenv": "~16.3.0",
        "eslint": "~8.48.0",
        "eslint-config-airbnb-typescript": "~17.1.0",
        "eslint-config-prettier": "~9.0.0",
        "eslint-import-resolver-typescript": "~3.6.0",
        "eslint-plugin-import": "~2.28.0",
        "eslint-plugin-prettier": "~5.0.0",
        "husky": "~8.0.0",
        "is-ci": "~3.0.0",
        "jest": "~29.6.0",
        "prettier": "~3.0.0",
        "semantic-release": "~21.0.0",
        "ts-jest": "~29.1.0",
        "ts-node": "~10.9.0",
        "typescript": "~5.1.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
